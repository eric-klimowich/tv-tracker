<body class="site-bg70">
  <section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading"><%= @user.show_name %>'s Account </h1>
        <hr class="my-4">
          <p class="lead text-muted">
            <%= "(#{@user.username})" %>
          </p>
    </div>
  </section>

  <section>
    <div class="text-center">

          <% if flash[:notice] %>
            <div class="alert alert-success">
              <strong>Success!</strong> <%= flash[:notice] + "!" %>
            </div>
          <% end %>
          <br>
          <div class="d-flex flex-row justify-content-center flex-wrap">
            <div class="p-2 card-about justify-content-center">
          Location: <%= @user.location %></br>
          About Me: <%= @user.bio %><br><br>
          <% if @user.shows %>
          Currently Watching:
            <% @user.user_shows.each do |saved| %>
              <%= "#{saved.show.title}  (Season #{saved.season}, Episode #{saved.episode})"  %><br>
            <% end  %>

          <% end %><br><br>

          <%= button_to "Edit Account Info", edit_user_path, method: :get %>
          <% if session[:user_id] == @user.id %>
            <!-- <%= button_to "Edit", edit_user_path(@user), method: :get %> -->
            <%= button_to "Delete Account", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account?"} %>
          <% end %>
          <%= render 'buttons/logout' %>

        </div>
        </div>
        </div>



    </section>
  </body>
