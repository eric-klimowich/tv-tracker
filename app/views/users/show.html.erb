<h1> <%= @user.show_name %>'s Account </h1>


Location: <%= @user.location %>
</br>
About Me: <%= @user.bio %>

<% if @user.shows %>
  <ul>
  <% @user.user_shows.each do |saved| %>
    <li> <%= "#{saved.show.title}  (#{saved.status})"  %> </li>
  <% end  %>
  </ul>
<% end %>



<%= button_to "Home", home_path, method: :get %>
<%= button_to "All Shows", shows_path, method: :get %>
<% if session[:user_id] == @user.id %>
  <%= button_to "Logout", login_path, method: :delete, data: { confirm: "Are you sure you want to log out?"} %>
  <!-- <%= button_to "Edit", edit_user_path(@user), method: :get %> -->
  <%= button_to "Delete Account", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account?"} %>
<% end %>
