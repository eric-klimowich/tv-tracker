<h1>Edit Your Account</h1>

<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>
<br>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>
  <%= f.label :location_city %>
  <%= f.text_field :location_city %>
  <%= f.label :location_state %>
  <%= f.text_field :location_state %></br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.submit %>
<% end  %>
