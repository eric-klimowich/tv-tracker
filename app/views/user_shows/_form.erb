<%= form_for @user_show do |f| %>
  <%= f.label :status %>
  <%= f.select :status, [['',''],['Want to Watch','Want to Watch'],['Watching','Watching'],['Waiting for new episodes','Waiting for new episodes'],['Watched','Watched'],['Stopped Watching','Stopped Watching']] %>
  <%= f.label :season %>
  <%= f.number_field :season, within: 1..50 %>
  <%= f.label :episode %>
  <%= f.number_field :episode, within: 1..50 %>
  <%= f.label :watched_on %>
  <%= f.select :watched_on, [['',''], ['Netflix','Netflix'],['Prime','Prime'],['HBO','HBO'],['Hulu','Hulu'], ['Other','Other']] %>
  <%= f.submit %>
<% end %>
