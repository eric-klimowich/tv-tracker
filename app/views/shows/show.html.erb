<h1> <%= @show.title %> </h1>

<h3> Seasons: <%= @show.seasons %> </h3>
Genre: <%= @show.genre %>
</br>
Starring: <%= @show.lead_actor %> <br>
Status:
<% if @show.status %>
  It's still going!
<% else  %>
  Cancelled
<% end %><br>
Description: <%= @show.description %><br><br>
<h3>Available on:</h3>
  <ul>
    <% @show.platforms.each do |platform| %>
      <li><%= link_to platform.name, platform_path(platform) %></li>
    <% end %>
  </ul>


<br><br>
<!-- <%= button_to "Edit", edit_show_path(@show), method: :get %> -->
<%= button_to "Add to My Shows", new_user_show_path, method: :get %>
<%= button_to "My Shows", home_path, method: :get %>
<%= button_to "All Shows", shows_path, method: :get %>
<%= button_to "Logout", login_path, method: :delete, data: { confirm: "Are you sure you want to log out?"} %>

<br><br>

<h3> <%= "#{@show.title} Reviews" %> </h3>
<% if @reviews[0] %>
  <ul>
    <% @reviews.each do |review| %>
    <li> Rating: <%= review.rating %><br>
        <%= review.content %>
    </li>
    <% end %>
  </ul>
<% else %>
  No reviews yet - Be the first!
  <%= button_to "Review #{@show.title}", new_review_path, method: :get %>
<% end %>
