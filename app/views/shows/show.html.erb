<body class="site-bg70">
  <section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading"><%= @show.title %></h1>
        <hr class="my-4">
          <p class="lead text-muted">
            <%= "(#{@show.genre})" %>

          </p>

    </div>
  </section>

  <section>
    <div class="text-center">
      <h1><%= "About #{@show.title}" %> </h1><br>

      <div class="d-flex flex-row justify-content-center flex-wrap">
        <div class="p-2 card-about justify-content-center">
          <%= render 'user_shows/about' %><br>
          <%= button_to "Add #{@show.title} to My Shows", new_user_show_path, method: :get %>
          <%= button_to "Edit Show Details", edit_show_path(@show), method: :get %><br><br>
        </div>
      </div>




    <h1><%= "#{@show.title} Reviews" %> </h1><br>
    <% if @reviews[0] %>
      <ul>
        <% @reviews.each do |review| %>
        <li> Rating: <%= review.rating %><br>
            <%= review.content %>
        </li>
        <% end %>
      </ul>
    <% else %>
      No reviews yet - Be the first!
    <% end %>
    <%= button_to "Review #{@show.title}", new_review_path, method: :get %>
    </div>
    </section>
  </body>
