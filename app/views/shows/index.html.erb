
<body>
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">All Shows</h1>
    </div>
  </section>

  <section>
    <div class="column_only">
      <div class="container">
        <div class="text-center">

          <%= form_tag(shows_path, method: :get) do %>
          <p><label>  Search Show Name</label>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag 'Search' %>
            <% end %>

            <% if @shows == "no results" %>
            That show doesn't exist yet.
            <%= button_to "Back to all shows", shows_path, method: :get %>
            <%= button_to "Create a new show", new_show_path, method: :get %>
            <% elsif @shows == "popular" %>


        </div>
      </div>

      <div class="album py-5 bg-light">
        <div class="container">



          <% else %>

          <% @shows.each do |show| %>


          <div class="row">
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">


                  <p class="card-text"><%= link_to show.title, show %></p>
                    <p class="card-text">Starring: <%= show.lead_actor %></p>
                    <p class="card-text"><%= show.description %></p>

                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                      </div>
                      <small class="text-muted">9 mins</small>



                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- took out the add to shows button from this page... can we find a way to pass through an identity? -->
          <% end %>
          <%= button_to "Back to all shows", shows_path, method: :get %>
          <% end %>
          <br><br>

          <h2>Don't see your show?</h2>
          <%= button_to "Create Show", new_show_path, method: :get %>

          <%= render 'buttons/my_shows' %>
          <%= render 'buttons/all_shows' %>
          <%= render 'buttons/my_account' %>
          <%= render 'buttons/logout' %>

        </div>

      </div>
    </div>

    </section>
