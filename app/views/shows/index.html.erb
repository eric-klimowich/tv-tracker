
<body>
  <section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">All Shows</h1>
    </div>
  </section>

  <section>
    <div class="container">
      <div class="text-center">

      <%= form_tag(shows_path, method: :get) do %>
        <%= label_tag "Search Show Name" %>
        <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search" %>

      <% if @shows == "no results" %>
          <p>That show doesn't exist yet.</p>
          <%= button_to "Back to all shows", shows_path, method: :get %>
          <%= button_to "Create a new show", new_show_path, method: :get %>
      <% else %>
        <div class="d-flex p-2">
          <% @shows.each do |show| %>
            <div class="d-flex flex-row justify-content-center flex-wrap">
              <div class="p-2 card">

                <p class="card-text"><%= "#{show.title}", show_path(show) %></p>
                <p class="card-text"><%= "Starring:#{show.lead_actor}" %></p>
                <p class="card-text"><%= "#{show.description}" %></p>
                <p class="card-text"><%= link_to "View Show", show_path(show) %></p>

              </div>
            </div>
          <% end %>
            <%= button_to "Back to all shows", shows_path, method: :get %>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="text-center">
      <h2>Don't see your show?</h2>
      <%= button_to "Create Show", new_show_path, method: :get %>

      <%= render "buttons/my_shows" %>
      <%= render "buttons/all_shows" %>
      <%= render "buttons/my_account" %>
      <%= render "buttons/logout" %>
    </div>
  </section>
</body>
