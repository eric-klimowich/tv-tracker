<%= form_for @show do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %></br>
  <%= f.label :seasons %>
  <%= f.number_field :seasons %>
  <%= f.label :genre %>
  <%= f.text_field :genre %></br>
  <%= f.label :lead_actor %>
  <%= f.text_field :lead_actor %></br>
  <%= f.label :status, "Still going?" %>
  <%= f.check_box :status %></br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end  %>
